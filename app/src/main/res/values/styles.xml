<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>


    //light theme
    <style name="colorPrimary_light">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="colorAccent_light">
        <item name="android:background">#ff0000</item>
    </style>

    <style name="textField_light">
        <item name="android:background">#e8a8dffa</item>
    </style>

    <style name="text_light">
        <item name="android:textColor">#000</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="button_wh" parent="text_large_wh">
        <item name="android:background">@drawable/button_wh</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
    </style>

    <style name="text_large_wh">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/text_large_margin_top</item>
    </style>

    <style name="text_regular_wh">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">@dimen/text_regular_text_size</item>
    </style>


    //dark theme
    <style name="colorPrimary_dark">
        <item name="android:background">#dc494949</item>
    </style>

    <style name="colorAccent_dark">
        <item name="android:background">#db5461</item>
    </style>

    <style name="textField_dark">
        <item name="android:background">#89b5ad</item>
    </style>

    <style name="text_dark">
        <item name="android:textColor">#fff</item>
    </style>

</resources>
